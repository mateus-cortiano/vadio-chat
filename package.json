{
  "name": "test-chat-app",
  "version": "0.5.0",
  "description": "test chat app",
  "main": "index.js",
  "scripts": {
    "dev-watch-client": "webpack --mode development --config webpack.config.client.js --watch ",
    "dev-build-client": "webpack --mode development --config webpack.config.client.js",
    "dev-run-server": "node ./dist/server/main.js ",
    "dev-watch-server": "tsc --watch ",
    "dev-build-server": "tsc",
    "dev-buildrun-server": "npm run dev-build-server && npm run dev-run-server",
    "dev-build": "npm run dev-build-client && npm run dev-build-server",
    "prod-build-client": "webpack --mode productiion --config webpack.config.client.js",
    "prod-build-server": "tsc",
    "build": "npm run dev-build-client && npm run dev-build-server",
    "serve": "npm run dev-run-server",
    "clear": "cd ./dist && del /s /q *.js && cd ..",
    "deploy": "npm run clear && npm run dev-build-server && npm run dev-build-client && node ./scripts/deploy.js && cd ./dist && git add . && git commit -m production && git push heroku master",
    "heroku-logs": "heroku logs --tail"
  },
  "author": "mateus c. schwarz <mateus.cortiano@gmail.com> (http://mateus.cortiano.info/)",
  "license": "ISC",
  "devDependencies": {
    "@types/ejs": "^3.1.1",
    "@types/express": "^4.17.13",
    "@types/jquery": "^3.5.14",
    "@types/mysql": "^2.15.21",
    "@types/node": "^17.0.34",
    "@types/socket.io": "^3.0.2",
    "@types/socket.io-client": "^3.0.0",
    "ts-loader": "^9.3.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "jquery": "^3.6.0",
    "mysql": "^2.18.1",
    "mysql2": "^2.3.3",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1"
  }
}
